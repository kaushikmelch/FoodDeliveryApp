<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Occasional">


    <LinearLayout
        android:orientation="vertical"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/pickuplocation"
        android:hint="Pickup Address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/white"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:inputType="textEmailAddress"
        app:met_baseColor="@android:color/white"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="25"
        app:met_primaryColor="@android:color/white">

    </com.rengwuxian.materialedittext.MaterialEditText>


        <Button
            android:id="@+id/pick_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:text="Use Default Address" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/droplocation"
        android:hint="Destination Adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@android:color/white"
        android:text=""
        android:textColor="@android:color/white"
        android:textSize="24sp"
        android:inputType="textPersonName"
        app:met_baseColor="@android:color/white"
        app:met_floatingLabel="highlight"
        app:met_maxCharacters="25"
        app:met_primaryColor="@android:color/white"
        app:met_singleLineEllipsis="true"/>

        <Button
            android:id="@+id/drop_default"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:textColor="@android:color/white"
            android:text="Use Default Address" />
    </LinearLayout>


    <Button
        android:id="@+id/occasionalmarkerbtn"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="100dp"
        android:layout_marginLeft="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="118dp"
        android:background="#E28905"
        android:text="Show location on Map">

    </Button>

    <Button
        android:id="@+id/placeorderbtn"
        android:layout_width="210dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="101dp"
        android:layout_marginLeft="101dp"
        android:layout_marginEnd="100dp"
        android:layout_marginRight="100dp"
        android:layout_marginBottom="48dp"
        android:background="#E28905"
        android:text="Place Order">

    </Button>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="191dp"
        android:text="*Leave it empty if its your current address"
        android:textColor="@android:color/white"
        android:textSize="20sp" />


</RelativeLayout>